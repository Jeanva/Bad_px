   <!-- <view class='bad_px' bindtap='addScore' style="transform:translate({{offsetX}} px,{{offsetY}} px);opacity:{{opac}}"></view>  -->
   <view class='flying_pic1' style='display:{{isShow?true :"none"}};left:{{tx_x+15}}px;top:{{tx_y+15}}px;'></view>
   <view class='flying_pic2' style='display:{{isShow?true :"none"}};left:{{tx_x+15}}px;top:{{tx_y+15}}px;'></view>
