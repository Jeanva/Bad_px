/**index.wxss**/

/* 自定义样式 */
.container{
  background-color:#ccc;
  width:100%;
  height:100%;
  position:fixed;
}
/* 左上角消失 */
.flying_pic1{
  background-color:yellow;
  width:10rpx;
  height:10rpx;
  position:absolute;
  animation:flyingOut 1.6s; 
}
@keyframes flyingOut{
  0% { opacity:1}
  25% { opacity:0.6}
  50% { opacity:0.3}
  100% { left:0rpx;top:0rpx;opacity:0;}
}
/* 右上角消失 */
.flying_pic2{
  background-color:blue;
  width:10rpx;
  height:10rpx;
  position:absolute;
  animation:flyingOut1 1.6s ease-in infinite; 
}
@keyframes flyingOut1{
  0% { opacity:1}
  25% { opacity:0.6}
  50% { opacity:0.3}
  100% { left:750rpx;top:0rpx;opacity:0;}
}
/* 右下角消失 */
.flying_pic3{
  background-color:crimson;
  width:10rpx;
  height:10rpx;
  position:absolute;
  animation:flyingOut2 1.6s ease-in infinite; 
}
@keyframes flyingOut2{
  0% { opacity:1}
  25% { opacity:0.6}
  50% { opacity:0.3}
  100% { left:750rpx;top:500rpx;opacity:0;}
}
/* 左下角消失 */
.flying_pic4{
  background-color:red;
  width:10rpx;
  height:10rpx;
  position:absolute;
  animation:flyingOut3 1.6s ease-in infinite; 
}
@keyframes flyingOut3{
  0% { opacity:1}
  25% { opacity:0.8}
  50% { opacity:0.5}
  100% { left:0rpx;top:500rpx;opacity:0;}
}
